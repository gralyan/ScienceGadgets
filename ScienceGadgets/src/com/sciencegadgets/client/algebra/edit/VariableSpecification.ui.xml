<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:sg='urn:import:com.sciencegadgets.client'>
	<ui:style>
		.spec {
			height: 100%;
			width: 50%;
			display: inline-block;
			vertical-align: top;
		}
	</ui:style>

	<g:FlowPanel>

		<g:TextBox ui:field="symbolInput" title="Set Variable Symbol"
			width="100%" height="20%"></g:TextBox>

		<g:FlowPanel width="100%" height="80%">

			<g:Grid ui:field="symbolPalette" addStyleNames="{style.spec}"></g:Grid>

			<g:FlowPanel ui:field="unitSelectionHolder" addStyleNames="{style.spec}"></g:FlowPanel>

		</g:FlowPanel>

	</g:FlowPanel>

</ui:UiBinder> 