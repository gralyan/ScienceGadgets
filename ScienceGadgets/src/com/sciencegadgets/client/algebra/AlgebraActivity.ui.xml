<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.row {
		display: inline-block;
		vertical-align: top;
	}
	
	.selectionDetails {
		background-color: white;
		overflow: auto;
	}
	
	.back {
		
	}
	
	.options {
		background-color: rgba(0, 0, 0, 0.2);
		border-radius: 10px;
		border: none;
		text-shadow: 0 0 3px white;
		color: inherit;
		font-weight: bold;
	}
	
	.options:active {
		background-color: gray;
	}
	
	.lowerEqArea {
		background-repeat: no-repeat;
		background-size: 100% 100%;
		color: black;
	}
	
	.mid {
		margin: 0 2%;
	}
	</ui:style>

	<g:AbsolutePanel width="100%" height="100%">

		<g:FlowPanel ui:field="upperEqArea" width="100%" height="15%">

			<g:FlowPanel ui:field="detailsArea" addStyleNames="{style.row} {style.back}"
				width="10%" height="100%"></g:FlowPanel>

			<!-- save button in edit mode, algOut in solve mode -->
			<g:SimplePanel ui:field="upperMidEqArea" addStyleNames='{style.row} {style.mid}'
				width="76%" height="100%"></g:SimplePanel>

			<g:Button ui:field="optionsButton" addStyleNames='{style.row} {style.options}'
				text="=" width="10%" height="100%"></g:Button>

		</g:FlowPanel>

		<!-- <g:FlowPanel width="100%" height="10%"></g:FlowPanel>gap -->

		<g:SimplePanel ui:field="eqPanelHolder" width="100%"
			height="70%"></g:SimplePanel>

		<g:FlowPanel ui:field="lowerEqArea" width="100%" height="15%">
		</g:FlowPanel>

	</g:AbsolutePanel>

</ui:UiBinder> 