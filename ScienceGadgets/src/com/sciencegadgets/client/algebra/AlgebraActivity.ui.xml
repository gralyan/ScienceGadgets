<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.row {
			display: inline-block;
			vertical-align: top;
		}
	</ui:style>
	
	<g:AbsolutePanel width="100%" height="100%">

		<g:FlowPanel ui:field="upperEqArea" width="100%" height="15%">

			<g:Button ui:field="optionsButton" text="Options" addStyleNames='{style.row}'
				width="10%" height="100%"></g:Button>

			<!-- save button added in edit mode, algOut in solve mode -->
			<g:FlowPanel ui:field="upperRightEqArea" addStyleNames='{style.row}'
				width="90%" height="100%"></g:FlowPanel>

		</g:FlowPanel>

		<g:FlowPanel width="100%" height="10%"></g:FlowPanel><!--gap -->

		<g:SimplePanel ui:field="eqPanelHolder" width="100%" height="60%"></g:SimplePanel>

		<g:FlowPanel ui:field="lowerEqArea" width="100%" height="15%"></g:FlowPanel>
		
	</g:AbsolutePanel>
	
</ui:UiBinder> 