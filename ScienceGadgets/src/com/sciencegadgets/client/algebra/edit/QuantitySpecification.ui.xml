<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:sg="urn:import:com.sciencegadgets.client">

	<ui:style>
		.spec {
			height: 96%;
			width: 98%;
			display: inline-block;
			vertical-align: top;
			border: thin solid darkGreen;
		}
		
		.display {
			display: inline-block;
			vertical-align: top;
			width: 78%;
			height: 100%;
		}
		.specHalf {
			display: inline-block;
			vertical-align: top;
			width: 48%;
			height: 100%;
			margin-right: 1%;
		}
		
		.toggle {
			vertical-align: top;
			display: inline-block;
			width: 20%;
			height: 100%;
		}
		
		.symbolPalette {
			overflow-y: scroll;
		}
	</ui:style>

	<g:FlowPanel height="100%">

			<!-- symbol area -->
		<g:FlowPanel styleName="{style.specHalf}">
			<!-- symbol display -->
			<g:FlowPanel height="20%">

				<sg:SymbolDisplay ui:field="symbolDisplay"
					addStyleNames="{style.display} numberDisplay" title="Variable Symbol"></sg:SymbolDisplay>
				<sg:ToggleSlide ui:field="symbolCaseToggle"
					addStyleNames="{style.toggle}"></sg:ToggleSlide>
			</g:FlowPanel>

			<!-- symbol input box -->
			<g:FlowPanel height="80%">

				<g:FlowPanel ui:field="symbolPalette"
					addStyleNames="{style.spec} {style.symbolPalette}"></g:FlowPanel>

			</g:FlowPanel>
		</g:FlowPanel>



			<!-- unit area -->
		<g:FlowPanel ui:field="unitArea" styleName="{style.specHalf}">

			<!-- unit display -->
			<g:FlowPanel height="20%">

				<g:FlowPanel ui:field="unitDisplay" addStyleNames="{style.display} numberDisplay"
					title="Variable Unit"></g:FlowPanel>
				<sg:ToggleSlide ui:field="unitReciprocalToggle"
					addStyleNames="{style.toggle}"></sg:ToggleSlide>
			</g:FlowPanel>

			<!-- unit input boxes -->
			<g:FlowPanel height="80%">

				<g:FlowPanel ui:field="unitSelectionHolder"
					addStyleNames="{style.spec}"></g:FlowPanel>

			</g:FlowPanel>

		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder> 