<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.dimensionalAnalysisArea {
			background-color: silver;
		}
	</ui:style>

	<g:FlowPanel height="100%">

		<g:FlowPanel addStyleNames="layoutRow" width="75%" height="100%">

			<g:FlowPanel ui:field="dimensionalAnalysisArea" height="30%"
				styleName="{style.dimensionalAnalysisArea}"></g:FlowPanel>

			<g:FlowPanel ui:field="workArea" height="70%">

				<g:Button ui:field="convertButton" text="Convert"
					addStyleNames="layoutRow" width="20%" height="100%"></g:Button>

				<g:AbsolutePanel ui:field="wrapperArea" width="80%" height="100%" addStyleNames="layoutRow"></g:AbsolutePanel>

			</g:FlowPanel>
		</g:FlowPanel>

		<g:FlowPanel addStyleNames="layoutRow" width="25%" height="100%">

			<g:FlowPanel ui:field="unitSelectionArea" height="80%">
			</g:FlowPanel>

			<g:FlowPanel ui:field="deriveUnitArea" height="20%">
			</g:FlowPanel>

		</g:FlowPanel>
		

	</g:FlowPanel>

</ui:UiBinder> 