<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:sg="urn:import:com.sciencegadgets.client.ui">
	
	<ui:style>
	.problemDetails{
	display: block;
	width: 80%;
	height: 80%;
	margin: auto;
	text-align: center;
	background-color: white;
	vertical-align: top;
	overflow: auto; 
	}
	.problemTitleContainer {
		font-weight: bold;
		border-bottom: solid 1px silver;
		height: 10%;
		width: 100%;
	}
	.tabsPanel{
		height: 10%;
		width: 100%;
	}
	.detailContainer{
		height: 80%;
		width: 100%;
	}
	</ui:style>
	
	<g:HTMLPanel styleName="{style.problemDetails}">
		
		<g:SimplePanel styleName="{style.problemTitleContainer}" ui:field="problemTitleContainer"></g:SimplePanel>
		
		<sg:CommunistPanel styleName="{style.tabsPanel}" ui:field="tabsPanel"></sg:CommunistPanel>
		
		<g:SimplePanel styleName="{style.detailContainer}" ui:field="detailContainer"></g:SimplePanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 